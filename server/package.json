{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "npm run validate:env && nodemon index.js",
  "seed": "node scripts/seed.js",
  "seed:intelligent": "node scripts/seedIntelligent.js",
  "seed:incremental": "node scripts/seedIncremental.js",
  "db:check": "node -e \"const mongoose=require('mongoose'); mongoose.connect(process.env.MONGO_URI||'mongodb://localhost:27017/ecommerce').then(async()=>{ const User=require('./models/userModel'); const Product=require('./models/productModel'); const Category=require('./models/categoryModel'); const Subcategory=require('./models/subcategoryModel'); const Cart=require('./models/cartModel'); const Tax=require('./models/taxModel'); const SupportTicket=require('./models/supportTicketModel'); const Analytics=require('./models/analyticsModel'); const counts=await Promise.all([User.countDocuments(),Product.countDocuments(),Category.countDocuments(),Subcategory.countDocuments(),Cart.countDocuments(),Tax.countDocuments(),SupportTicket.countDocuments(),Analytics.countDocuments()]); console.log({User:counts[0],Product:counts[1],Category:counts[2],Subcategory:counts[3],Cart:counts[4],Tax:counts[5],SupportTicket:counts[6],Analytics:counts[7]}); await mongoose.connection.close(); }).catch(e=>{ console.error(e); process.exit(1); })\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "optimize:indexes": "node scripts/optimizeIndexes.js",
    "analyze:performance": "artillery run tests/performance/load-test.yml",
    "monitor": "clinic doctor -- node index.js",
    "validate:env": "node scripts/validateEnv.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "axios": "^1.12.2",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-fileupload": "^1.5.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-prom-bundle": "^8.0.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "sanitize-html": "^2.17.0",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "xss": "^1.0.15",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/runtime": "^7.28.4",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.38.0",
    "@faker-js/faker": "^10.1.0",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/jest": "^30.0.0",
    "artillery": "^2.0.26",
    "babel-jest": "^30.2.0",
    "bcryptjs": "^3.0.2",
    "clinic": "^13.0.0",
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "ioredis": "^5.8.2",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "mongodb-memory-server": "^10.2.3",
    "nodemailer": "^7.0.10",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "redis": "^5.9.0",
    "supertest": "^7.1.4"
  }
}
